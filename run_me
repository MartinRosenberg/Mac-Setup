#!/usr/bin/env bash

################################################################################
### Declare things
################################################################################

BLOB="https://raw.githubusercontent.com/MartinRosenberg/Mac-Setup/master"

function copy_dotfiles {
	cd ~
	curl --location --remote-name-all "${BLOB}/{.bash_profile,.gitconfig,.vimrc,.zshrc}"
	source .bash_profile
}

function install_homebrew {
	if ! command -v brew > /dev/null; then
		/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
	fi
	curl -o- "${BLOB}/Brewfile" | brew bundle install --verbose > brew_bundle_install.log
}

function install_nvm {
	if ! command -v nvm > /dev/null; then
		curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.2/install.sh | bash
	fi
}

################################################################################
### Do things
################################################################################

copy_dotfiles
install_homebrew
install_nvm
